@model SalesWebMvc.Models.Seller
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class=" form-group">
                <label asp-for="Name"  class="control-label"></label>
                <input asp-for="Name" calss="form-control">
            </div>
            <br />
            <div class=" form-group">
                <label asp-for="Email"  class="control-label"></label>
                <input asp-for="Email" calss="form-control">
            </div>
            <br />

            <div class=" form-group">
                <label asp-for="BirthDate"  class="control-label"></label>
                <input asp-for="BirthDate" calss="form-control">
            </div>
            <br />
            <div class=" form-group">
                <label asp-for="BaseSalary"  class="control-label"></label>
                <input asp-for="BaseSalary" calss="form-control">
            </div>
            <div class=" form-group">

                <input type="submit" value="Create" calss="btn btn-danger" />
            </div>
        </form>
    </div>
</div>